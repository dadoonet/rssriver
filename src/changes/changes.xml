<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">

	<body>
        <release date="2014-02-03" description="Update for elasticsearch 1.0.0" version="1.0.0.RC1">
            <action issue="16" dev="dadoonet" type="update" due-to="LeStef">
                Support enclosure and category tags.
            </action>
            <action issue="21" dev="dadoonet" type="update">
                Use BulkProcessor feature.
            </action>
            <action issue="20" dev="dadoonet" type="update">
                Define a default mapping for RSS documents.
            </action>
            <action issue="19" dev="dadoonet" type="update">
                Update Rome to new official repository.
            </action>
            <action issue="18" dev="dadoonet" type="update">
                Update to elasticsearch 1.0.0.RC1. Test infra moved as well to elasticsearch test framework.
            </action>
        </release>

        <release date="2013-10-18" description="Move to ES 0.90.5" version="0.2.0">
            <action issue="15" dev="dadoonet" type="update">
                Upgrade to elasticsearch 0.90.5.
            </action>
        </release>

        <release date="2013-02-26" description="Move to ES 0.90 and TTL" version="0.1.0">
            <action issue="8" dev="dadoonet" type="add">
                Use the ttl rss field to auto adjust feed refresh rate.
            </action>
            <action issue="9" dev="dadoonet" type="update">
                Use JUnit tests instead of main() tests.
            </action>
            <action issue="12" dev="dadoonet" type="update">
                Move to Elasticsearch 0.90.0.Beta1.
            </action>
        </release>

        <release date="2012-02-07" description="[Breaking change] Update to ES 0.19.0.RC1" version="0.0.6">
			<action issue="7" dev="dadoonet" type="update">
				Update to Elasticsearch 0.19.0.RC1.
			</action>
		</release>

		<release date="2011-12-15" description="Support for multiple feeds" version="0.0.5">
			<action issue="6" dev="dadoonet" due-to="Sergio Panseri" due-to-email="spanseri@gmail.com" type="add">
				Manage multiple RSS feeds within a single river.
			</action>
		</release>

		<release date="2011-11-22" description="Bug fix" version="0.0.4">
			<action issue="5" dev="managr" due-to="Marcin Naglik" type="fix">
				River is hanging with NPE.
			</action>
		</release>

		<release date="2011-11-10" description="Support for geo lat/long" version="0.0.3">
			<action issue="4" dev="managr" due-to="Marcin Naglik" type="add">
				Adding support for geo rss.
			</action>
			<action issue="3" dev="dadoonet" due-to="Tanguy Leroux" type="fix">
				pom.xml : Automatic upload to github of ZIP file doesn't seems to work.
			</action>
		</release>

		<release date="2011-09-15" description="Use ROME project to parse RSS feeds" version="0.0.2">
			<action issue="1" dev="dadoonet" due-to="Shay Banon" due-to-email="shay.banon@gmail.com" type="update">
				Use ROME instead of internal classes to parse RSS Feeds.
			</action>
		</release>

		<release date="2011-09-14" description="First public release (very alpha version)" version="0.0.1">
		</release>

	</body>

</document>
